<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.Derana"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    tools:context=".ui.page.beranda.formulir.fragments.IdentitasFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi identitasmu"
        android:textSize="18sp"
        android:fontFamily="@font/jakarta_sans_bold"
        android:textStyle="bold"
        android:textColor="@color/abu_abu"
        android:padding="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi formulir di bawah ini sesuai dengan identitas yang kamu miliki ya."
        android:textSize="14sp"
        android:fontFamily="@font/jakarta_sans_reguler"
        android:textStyle="normal"
        android:textColor="@color/abu_abu"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvIdentitas"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>